{% extends 'base.html' %}

{% block head %}

    <div class="header">
        <h1><a href="/">The Movie Game</a></h1>
    </div>
    
{% endblock %}

{% block content %}

    <div class='messages' id="startMessages">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            {% endif %}
        {% endwith %}
    </div>	
    <p id="instrux"> We'll start you off with a random movie from some categories you choose: </p>

    <div class="game">
        <form method="POST" action="/">


                {% for genre in all_genres %}

                    <li class="genreList">
                        <input id="{{ genre['id'] }}" type="checkbox" name="genres" value="{{ genre['id'] }}">
                        <label for="{{ genre['id'] }}"> {{ genre['name'] }}</label>
                    </li>

                {% endfor %}

                <div class="startingButtons">
                	<input id="nameEntry" type="text" name="name" placeholder="Enter your name here"/>
                    <br />
                    <input id="startSubmit" type="submit" name="submit" value='Play!' />
                </div>

        </form>
    </div>


{% endblock %}

